@model IEnumerable<TechStore.Models.Customer>

@{
    ViewBag.Title = "Quản lý khách hàng";
    ViewBag.Message = "Danh sách tất cả khách hàng trong hệ thống";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Danh sách khách hàng</h4>
                <div class="pull-right">
                    <a href="@Url.Action("Create", "Customers", new { area = "" })" class="btn btn-primary">
                        <i class="glyphicon glyphicon-plus"></i> Thêm khách hàng mới
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Họ tên</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Thành phố</th>
                                <th>Ngày tạo</th>
                                <th>Số đơn hàng</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.FullName</strong>
                                    </td>
                                    <td>
                                        <a href="mailto:@item.Email">@item.Email</a>
                                    </td>
                                    <td>
                                        <a href="tel:@item.Phone">@item.Phone</a>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Address))
                                        {
                                            <span title="@item.Address">@(item.Address.Length > 30 ? item.Address.Substring(0, 30) + "..." : item.Address)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa cập nhật</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.City))
                                        {
                                            @item.City
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa cập nhật</span>
                                        }
                                    </td>
                                    <td>
                                        @item.CreatedDate.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        <span class="badge">@item.Orders.Count</span>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="@Url.Action("Details", "Customers", new { id = item.CustomerId, area = "" })" 
                                               class="btn btn-info btn-sm" title="Xem chi tiết">
                                                <i class="glyphicon glyphicon-eye-open"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Customers", new { id = item.CustomerId, area = "" })" 
                                               class="btn btn-warning btn-sm" title="Sửa">
                                                <i class="glyphicon glyphicon-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Customers", new { id = item.CustomerId, area = "" })" 
                                               class="btn btn-danger btn-sm" title="Xóa"
                                               onclick="return confirm('Bạn có chắc chắn muốn xóa khách hàng này?')">
                                                <i class="glyphicon glyphicon-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-info">
            <h5>Thống kê khách hàng</h5>
            <ul class="list-inline">
                <li><strong>Tổng khách hàng:</strong> @Model.Count()</li>
                <li><strong>Khách hàng mới tháng này:</strong> @Model.Count(c => c.CreatedDate.Month == DateTime.Now.Month && c.CreatedDate.Year == DateTime.Now.Year)</li>
                <li><strong>Có địa chỉ:</strong> @Model.Count(c => !string.IsNullOrEmpty(c.Address))</li>
                <li><strong>Có đơn hàng:</strong> @Model.Count(c => c.Orders.Any())</li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Khách hàng có nhiều đơn hàng nhất</h4>
            </div>
            <div class="panel-body">
                @{
                    var topCustomers = Model.OrderByDescending(c => c.Orders.Count).Take(5);
                }
                @if (topCustomers.Any())
                {
                    <div class="list-group">
                        @foreach (var customer in topCustomers)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@customer.FullName</h6>
                                    <span class="badge">@customer.Orders.Count đơn hàng</span>
                                </div>
                                <p class="mb-1">@customer.Email</p>
                                <small>Tổng chi tiêu: @customer.Orders.Sum(o => o.TotalAmount).ToString("N0") VNĐ</small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">Chưa có dữ liệu khách hàng</p>
                }
            </div>
        </div>
    </div>
</div>
