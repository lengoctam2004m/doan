@model IEnumerable<TechStore.Models.Product>

@{
    ViewBag.Title = "Quản lý sản phẩm";
    ViewBag.Message = "Danh sách tất cả sản phẩm trong hệ thống";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Danh sách sản phẩm</h4>
                <div class="pull-right">
                    <a href="@Url.Action("Create", "Products", new { area = "" })" class="btn btn-primary">
                        <i class="glyphicon glyphicon-plus"></i> Thêm sản phẩm mới
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Hình ảnh</th>
                                <th>Tên sản phẩm</th>
                                <th>Danh mục</th>
                                <th>Thương hiệu</th>
                                <th>Giá</th>
                                <th>Tồn kho</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.Name" style="width: 50px; height: 50px; object-fit: cover;" class="img-thumbnail">
                                        }
                                        else
                                        {
                                            <img src="~/Images/no-image.jpg" alt="Không có hình ảnh" style="width: 50px; height: 50px; object-fit: cover;" class="img-thumbnail">
                                        }
                                    </td>
                                    <td>
                                        <strong>@item.Name</strong>
                                        @if (!string.IsNullOrEmpty(item.SKU))
                                        {
                                            <br><small class="text-muted">SKU: @item.SKU</small>
                                        }
                                    </td>
                                    <td>@item.Category.Name</td>
                                    <td>@item.Brand</td>
                                    <td>
                                        <strong class="text-danger">@item.Price.ToString("N0") VNĐ</strong>
                                    </td>
                                    <td>
                                        @if (item.StockQuantity > 0)
                                        {
                                            <span class="label label-success">@item.StockQuantity</span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger">Hết hàng</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="label label-success">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger">Ngừng bán</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="@Url.Action("Details", "Products", new { id = item.ProductId, area = "" })" 
                                               class="btn btn-info btn-sm" title="Xem chi tiết">
                                                <i class="glyphicon glyphicon-eye-open"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Products", new { id = item.ProductId, area = "" })" 
                                               class="btn btn-warning btn-sm" title="Sửa">
                                                <i class="glyphicon glyphicon-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Products", new { id = item.ProductId, area = "" })" 
                                               class="btn btn-danger btn-sm" title="Xóa"
                                               onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">
                                                <i class="glyphicon glyphicon-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-info">
            <h5>Thống kê sản phẩm</h5>
            <ul class="list-inline">
                <li><strong>Tổng sản phẩm:</strong> @Model.Count()</li>
                <li><strong>Đang hoạt động:</strong> @Model.Count(p => p.IsActive)</li>
                <li><strong>Còn hàng:</strong> @Model.Count(p => p.StockQuantity > 0)</li>
                <li><strong>Hết hàng:</strong> @Model.Count(p => p.StockQuantity == 0)</li>
            </ul>
        </div>
    </div>
</div>
