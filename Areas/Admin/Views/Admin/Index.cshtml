@model TechStore.Areas.Admin.Controllers.AdminDashboardViewModel

@{
    ViewBag.Title = "Dashboard";
    ViewBag.Message = "Tổng quan hệ thống";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <!-- Thống kê tổng quan -->
    <div class="col-md-3">
        <div class="stat-card">
            <h3>@Model.TotalProducts</h3>
            <p>Sản phẩm</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <h3>@Model.TotalOrders</h3>
            <p>Đơn hàng</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <h3>@Model.TotalCustomers</h3>
            <p>Khách hàng</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <h3>@Model.TotalRevenue.ToString("N0") VNĐ</h3>
            <p>Tổng doanh thu</p>
        </div>
    </div>
</div>

<div class="row">
    <!-- Trạng thái đơn hàng -->
    <div class="col-md-6">
        <div class="chart-container">
            <h4>Trạng thái đơn hàng</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="alert alert-warning">
                        <strong>@Model.PendingOrders</strong> Chờ xử lý
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-info">
                        <strong>@Model.ProcessingOrders</strong> Đang xử lý
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-primary">
                        <strong>@Model.ShippedOrders</strong> Đã giao hàng
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-success">
                        <strong>@Model.DeliveredOrders</strong> Đã nhận hàng
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Sản phẩm bán chạy -->
    <div class="col-md-6">
        <div class="chart-container">
            <h4>Sản phẩm bán chạy</h4>
            @if (Model.TopSellingProducts.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Đã bán</th>
                                <th>Doanh thu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.TopSellingProducts)
                            {
                                <tr>
                                    <td>@item.Product.Name</td>
                                    <td>@item.TotalSold</td>
                                    <td>@item.TotalRevenue.ToString("N0") VNĐ</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">Chưa có dữ liệu bán hàng</p>
            }
        </div>
    </div>
</div>

<div class="row">
    <!-- Doanh thu theo tháng -->
    <div class="col-md-8">
        <div class="chart-container">
            <h4>Doanh thu 6 tháng gần nhất</h4>
            <canvas id="revenueChart" width="400" height="200"></canvas>
        </div>
    </div>
    
    <!-- Đơn hàng gần đây -->
    <div class="col-md-4">
        <div class="chart-container">
            <h4>Đơn hàng gần đây</h4>
            @if (Model.RecentOrders.Any())
            {
                <div class="list-group">
                    @foreach (var order in Model.RecentOrders.Take(5))
                    {
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">#@order.OrderId</h6>
                                <small>@order.OrderDate.ToString("dd/MM/yyyy")</small>
                            </div>
                            <p class="mb-1">@order.Customer.FullName</p>
                            <small>@order.TotalAmount.ToString("N0") VNĐ</small>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">Chưa có đơn hàng nào</p>
            }
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Biểu đồ doanh thu
        var ctx = document.getElementById('revenueChart').getContext('2d');
        var revenueData = @Html.Raw(Json.Encode(Model.MonthlyRevenue.Select(x => x.Revenue).ToArray()));
        var monthLabels = @Html.Raw(Json.Encode(Model.MonthlyRevenue.Select(x => x.Month).ToArray()));
        
        var chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: monthLabels,
                datasets: [{
                    label: 'Doanh thu (VNĐ)',
                    data: revenueData,
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value.toLocaleString('vi-VN') + ' VNĐ';
                            }
                        }
                    }
                }
            }
        });
    </script>
}
