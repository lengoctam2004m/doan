@model TechStore.Models.Order

@{
    ViewBag.Title = "Chi tiết đơn hàng";
}

<h2>Chi tiết đơn hàng #@Model.OrderId</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Thông tin khách hàng</h4>
        <dl class="dl-horizontal">
            <dt>Họ tên:</dt>
            <dd>@Model.Customer.FullName</dd>
            <dt>Email:</dt>
            <dd>@Model.Customer.Email</dd>
            <dt>Số điện thoại:</dt>
            <dd>@Model.Customer.Phone</dd>
            <dt>Địa chỉ:</dt>
            <dd>@Model.Customer.Address</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <h4>Thông tin đơn hàng</h4>
        <dl class="dl-horizontal">
            <dt>Ngày đặt hàng:</dt>
            <dd>@Model.OrderDate</dd>
            <dt>Trạng thái:</dt>
            <dd>
                @switch (Model.Status)
                {
                    case TechStore.Models.OrderStatus.Pending:
                        <span class="label label-warning">Chờ xử lý</span>
                        break;
                    case TechStore.Models.OrderStatus.Processing:
                        <span class="label label-info">Đang xử lý</span>
                        break;
                    case TechStore.Models.OrderStatus.Shipped:
                        <span class="label label-primary">Đã giao hàng</span>
                        break;
                    case TechStore.Models.OrderStatus.Delivered:
                        <span class="label label-success">Đã nhận hàng</span>
                        break;
                    case TechStore.Models.OrderStatus.Cancelled:
                        <span class="label label-danger">Đã hủy</span>
                        break;
                }
            </dd>
            <dt>Tổng tiền:</dt>
            <dd><strong>@Model.TotalAmount.ToString("N0") VNĐ</strong></dd>
        </dl>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h4>Chi tiết sản phẩm</h4>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
                @foreach (var detail in Model.OrderDetails)
                {
                    <tr>
                        <td>@detail.Product.Name</td>
                        <td>@detail.Quantity</td>
                        <td>@detail.UnitPrice.ToString("N0") VNĐ</td>
                        <td>@detail.TotalPrice.ToString("N0") VNĐ</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h4>Cập nhật trạng thái đơn hàng</h4>
        <div class="btn-group">
            @using (Html.BeginForm("UpdateStatus", "Orders", FormMethod.Post))
            {
                @Html.Hidden("orderId", Model.OrderId)
                <button type="submit" name="status" value="1" class="btn btn-info">Đang xử lý</button>
                <button type="submit" name="status" value="2" class="btn btn-primary">Đã giao hàng</button>
                <button type="submit" name="status" value="3" class="btn btn-success">Đã nhận hàng</button>
                <button type="submit" name="status" value="4" class="btn btn-danger">Hủy đơn hàng</button>
            }
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p>
            @Html.ActionLink("Sửa", "Edit", new { id = Model.OrderId }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })
        </p>
    </div>
</div>
